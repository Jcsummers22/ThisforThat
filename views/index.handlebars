<script type="text/javascript">
  $('#clearSignUp').on("click", function() {
      $("user_name").val("");
      $('#first_name').val('');
      $('#last_name').val('');
      $('#email').val('');
      $("#zipcode").val("");
      $('#passwordSignUp').val('');
  });

  $('#signUp').on("click", function() {
    var userInput = {
      userName: $("#user_name").val().trim(),
      firstName: $('#first_name').val().trim(),
      lastName: $('#last_name').val().trim(),
      email: $('#emailSignUp').val().trim(),
      zipcode: $("#zipcode").val().trim(),
      password: $('#passwordSignUp').val().trim(),
    }
    var currentURL = window.location.origin;
    $.post('/api/newuser', userInput, function(data) {
      $('#modal1').modal('close');
      
    });
    return false;
  });
  $('#logIn').on("click", function() {
    var userInput = {
      email: $('#emailLogin').val().trim(),
      password: $('#passwordLogin').val().trim()
    }

    $.post('/api/signin', userInput, function(data) {
      window.location = data.redirect;
    });
    return false;
  });
</script>